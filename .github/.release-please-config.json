{
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "type": "generic",
          "path": "build.gradle.kts",
          "glob": false,
          "jsonpath": "$",
          "patterns": [
            {
              "find": "version = \"([0-9.]+)\"",
              "replace": "version = \"${version}\""
            }
          ]
        },
