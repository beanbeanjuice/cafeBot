{
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "type": "generic",
          "path": "build.gradle.kts",
          "patterns": [
            {
              "find": "version = \"[0-9]+\\.[0-9]+\\.[0-9]+\"",
              "replace": "version = \"${version}\""
            }
          ]
        }
      ]
    }
  }
}
